<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<welcome-file-list>
	    <welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>ShoppingWebsite</servlet-name>
		<servlet-class>com.shopping.ShoppingWebsiteServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ShoppingWebsite</servlet-name>
		<url-pattern>/shoppingwebsite</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>SignupUser</servlet-name>
		<servlet-class>com.shopping.SignupUser</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SignupUser</servlet-name>
		<url-pattern>/SignupUser</url-pattern>
	</servlet-mapping>
	
</web-app>
